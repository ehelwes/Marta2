#! /bin/ksh
#
#  getallsp        Ladda ner alla SP ur en DB
#
#  Ove Walter      Infodata AB
#
#  @(#)getallsp    1.0     041203
#

#set -x

PGM=`basename $0`
PGMDIR=`dirname $0`

TMP=/tmp/$PGM$$.
TMPERR=${TMP}ERR
TMPDIR=${TMP}dir
TMP1=${TMP}1
TMP2=${TMP}2

# Städa vid avbrott
trap "echo \"$PGM: Interrupted\" ; /bin/rm -rf ${TMP}* >/dev/null 2>&1 ; exit ${EXIT_VA-1 }" 1 2 3 15

exiting () # Clean up and exit
{
    /bin/rm -rf ${TMP}*
    exit ${1}
}

fel () # Print Error msg
{
   echo "$PGM: $1 " >>$TMPERR
}

# Check parameter

if [ "$#" -ne 3 ]
then
    echo "Usage: $PGM host db remotehostdir"
    exiting 1
fi

HOST=$1
DB=$2
REMOTEDIR=$3

~ovew/bin/getspnames $HOST $DB $TMP1

mkdir $TMPDIR

for i in `cat $TMP1`
do
    SP=$i
    # Appenda så att alla SP med samma namn hamnar i 1 fil
    getmodule $SP SP $DB >> $TMPDIR/$SP.sql
done

rcp $TMPDIR/*.sql $REMOTEHOSTDIR

exiting 0
