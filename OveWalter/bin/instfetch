#!/bin/sh
#
#  instfetch       Hämta ny version från arons
#                  leveransbibliotek
#
#  Ove Walter      Infodata AB
#
#  @(#)instfetch   1.0	041201
#

#set -x 

PGM=`basename $0`
PGMDIR=`dirname $0`

TMP=/tmp/$PGM$$.
TMPERR=${TMP}ERR
TMP1=${TMP}1
TMP2=${TMP}2
TMP3=${TMP}3

# Städa vid avbrott
trap "echo \"$PGM: Interrupted\" ; /bin/rm -f ${TMP}* >/dev/null 2>&1 ; exit ${EXIT_VA-1 }" 1 2 3 15

exiting () # Clean up and exit
{
    /bin/rm -f ${TMP}*
    exit ${1}
}

fel () # Print Error msg
{
   echo "$PGM: $1 " >>$TMPERR
}

# Check parameter

if [ "$#" -ne 2 ]
then
    echo "Usage: $PGM version db" 
    exiting 1
fi

VERSION=$1
LEVHOST=aron
LEVDIR=/pgmmm/stored_procedures/orgval/Leveranser
INSTDB=$2

if [ $INSTDB = "Systest1" -o $INSTDB = "Atest1" ]
then
    INSTALLDIR=/pgmmm/stored_procedures/$INSTDB/Leveranser/$VERSION
else
    INSTALLDIR=/pgmmm/stored_procedures/Leveranser/$VERSION
fi

if [ ! -d $INSTALLDIR ]
then
  echo $INSTALLDIR är ej en katalog
  exiting 1
fi
if [ ! "$INSTALLDIR" = `pwd` ]
then
  echo Du måste stå i $INSTALLDIR
  exiting 1
fi

rcp -p -r $LEVHOST:$LEVDIR/$VERSION/* .
chmod -R g+w *

# Exiting

exiting 0
